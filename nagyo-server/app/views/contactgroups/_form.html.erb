<div id="center_content">
  <%= semantic_form_for @contactgroup, :html => { :class => 'myform', :id => 'myform' } do |f| %>
  <fieldset>
    <legend>Required Parameters</legend>
    <%= f.input :contactgroup_name %>
    <%# NOTE: alias commented out before ... do we need it? wht doesnt it 
              get saved? probably need to change alias to something that is not a 
              reserved ruby keyword
            %>
    <%#= f.input :alias %>
  </fieldset>
  <fieldset>
    <a href="#" id="toggleButton"><legend>Optional Parameters</legend></a>
    <div id="toggleSection" style="display:none">
      <%= f.input :members, :as => :select, :collection => Contact.all %>
      <%= f.input :contactgroup_members, :as => :select, :collection => Contactgroup.all %>
  </fieldset>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
    <%= f.action :cancel, :as => :link %>
  <% end %>
<% end %>

