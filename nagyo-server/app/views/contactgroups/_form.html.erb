<div id="center_content">
  <%= semantic_form_for @contactgroup, :html => { :class => 'myform', :id => 'myform' } do |f| %>
  <fieldset>
    <legend>Required Parameters</legend>
    <%= f.input :contactgroup_name %>
    <% f.input :alias %>
  </fieldset>
  <fieldset>
    <a href="#" id="toggleButton"><legend>Optional Parameters</legend></a>
    <div id="toggleSection" style="display:none">
      <%= f.input :members, :as => :select, :collection => Contact.all.map{|i| i.contact_name}, :include_blank => false, :input_html => { :multiple => true, :include_blank => false } %>
      <%= f.input :contactgroup_members, :as => :select, :collection => Contactgroup.all.map{|i| i.contactgroup_name}, :include_blank => false, :input_html => { :multiple => true, :include_blank => false } %>
  </fieldset>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
    <%= f.action :cancel, :as => :link %>
  <% end %>
<% end %>

