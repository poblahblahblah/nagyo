<div id="center_content">
  <%= semantic_form_for @vip, :html => { :class => 'myform', :id => 'myform' } do |f| %>
  <fieldset>
    <legend>Required Parameters</legend>
    <%= f.input :hostgroup %>
    <%= f.input :contacts, :as => :select, :collection => Contact.all %>
    <%= f.input :vip_name %>
    <%= f.input :vip_dns %>
    <%= f.input :check_command, :as => :select, :collection => Command.all %>
    <%= f.input :percent_warn %>
    <%= f.input :percent_crit %>
    <%= f.input :ecv_uri %>
    <%= f.input :ecv_string %>
  </fieldset>
  <fieldset>
    <a href="#" id="toggleButton"><legend>Optional Parameters</legend></a>
    <div id="toggleSection" style="display:none">
      <%= f.input :node_check_command, :as => :select, :collection => Command.all %>
      <%= f.input :node_check_command_arguments %>
      <%= f.input :notify_on_node_service, :as => :boolean %>
    </div>
  </fieldset>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
    <%= f.action :cancel, :as => :link %>
  <% end %>
<% end %>

