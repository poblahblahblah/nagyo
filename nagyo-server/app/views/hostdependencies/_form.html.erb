<div id="center_content">
<%= semantic_form_for @hostdependency, :html => { :class => 'myform', :id => 'myform' } do |f| %>
  <%= f.inputs :name => "Required" do %>
    <%= f.inputs :name => "Depended upon" do %>
      <%= f.input :host, :member_label => :host_name %>
      <%= f.input :hostgroup %>
    <% end %>
    <%= f.inputs :name => "Dependent" do %>
      <%= f.input :dependent_host, :member_label => :host_name %>
      <%= f.input :dependent_hostgroup %>
    <% end %>
  <% end %>
  <fieldset>
    <legend>Required Parameters</legend>
  </fieldset>
  <fieldset>
    <a href="#" id="toggleButton"><legend>Optional Parameters</legend></a>
    <div id="toggleSection" style="display:none">
      <%= f.input :inherits_parent, :as => :boolean %>
      <%= f.input :execution_failure_criteria, :as => :nagios_options, :collection => %W(o d u p n) %>
      <%= f.input :notification_failure_criteria, :as => :nagios_options, :collection => %W(o d u p n) %>
      <%= f.input :dependency_period, :as => :select, :collection => Timeperiod.all %>
    </div>
  </fieldset>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
    <%= f.action :cancel, :as => :link %>
  <% end %>
<% end %>

