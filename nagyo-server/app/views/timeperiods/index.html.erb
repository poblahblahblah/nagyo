<%- @page_title = 'Timeperiods' -%>

<h1>Timeperiods</h1>

<div id="results_table">
<table cellspacing="0" class="styled">
  <thead>
    <tr>
      <th nowrap="nowrap"></th>
      <th>Timeperiod Name</th>
      <th>Alias</th>
    </tr>
  </thead>
  <tbody>
    <%- @timeperiods.each do |c| -%>
    <tr class="<%= cycle('odd', 'even') -%>">
      <td><%= link_to 'Show', c %> | <%= link_to 'Edit', edit_timeperiod_path(c) %> | <%= link_to 'Destroy', c, :confirm => 'Are you sure?', :method => :delete %></td>
      <td><%= h c.timeperiod_name %></td>
      <td><%= h c.alias %></td>
    </tr>
    <%- end -%>
  </tbody>
</table>
</div> <!-- end results_table div -->

<br />

<%= link_to 'New Timeperiod', new_timeperiod_path %>
