<div id="center_content">
  <%= semantic_form_for @hardwareprofile, :html => { :class => 'myform', :id => 'myform' } do |f| %>
    <%= f.semantic_errors %>
  <fieldset>
    <legend>Required Parameters</legend>
    <%= f.input :hardware_profile %>
    <%= f.input :contacts, :as => :select, :collection => Contact.all %>
    <%= f.input :check_commands, :as => :select, :collection => Command.all %>
  </fieldset>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
    <%= f.action :cancel, :as => :link %>
  <% end %>
<% end %>

