<div id="center_content">
  <%= semantic_form_for @hardwareprofile, :html => { :class => 'myform', :id => 'myform' } do |f| %>
  <fieldset>
    <legend>Required Parameters</legend>
    <%= f.input :hardware_profile %>
    <%= f.input :check_commands, :as => :select, :collection => Command.all.map{|i| i.command_name}, :include_blank => false, :input_html => { :multiple => true, :include_blank => false } %>
  </fieldset>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
    <%= f.action :cancel, :as => :link %>
  <% end %>
<% end %>

