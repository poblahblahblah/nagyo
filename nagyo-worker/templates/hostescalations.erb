define hostescalation {
<% %W(host_name hostgroup_name contacts contact_groups first_notification
      last_notification notification_interval escalation_period escalation_options
   ).each do |key| %>
<% if cc.has_key?(key) && !cc[key].to_s.empty? %>
  <%= key %>    <%= cc[key].to_s %>
<% end %>
<% end %>
}
